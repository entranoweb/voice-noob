# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/voicenoob

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Default Admin (created on first startup if no users exist)
# IMPORTANT: Change these values before running!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=CHANGE_ME_BEFORE_RUNNING
ADMIN_NAME=Admin

# QA Testing Framework (optional - for post-call evaluation)
# Required for QA evaluations to work
ANTHROPIC_API_KEY=sk-ant-your-key-here

# QA Feature Flags
QA_ENABLED=false
QA_AUTO_EVALUATE=true
QA_DEFAULT_THRESHOLD=70
QA_EVALUATION_MODEL=claude-sonnet-4-20250514
QA_MAX_CONCURRENT_EVALUATIONS=5
QA_ALERT_ON_FAILURE=true
QA_ENABLE_LATENCY_TRACKING=true
QA_ENABLE_TURN_ANALYSIS=true
QA_ENABLE_QUALITY_METRICS=true
